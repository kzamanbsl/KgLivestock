@using static Firm.Utility.Miscellaneous.Enum
@model CowServiceViewModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TCL Agro </title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link href="~/AdminLib/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/AdminLib/admin/css/adminlte.min.css" rel="stylesheet" />
</head>
<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    .small, small {
        font-size: 61%;
        font-weight: 600;
    }

    @@page {
        size: auto;
        margin: 0mm;
    }

    html {
        background-color: #FFFFFF;
        margin: 0mm;
    }

    body {
        padding: 30px;
    }
/*
    li {
        list-style: none;
        font-weight: 600;
    }

    h4 {
        margin-bottom: 3px;
        font-weight: 900;
        font-size: 25px;
    }

    ul {
        margin: 0;
        padding: 0;
    }

    p {
        margin: 0;
        padding: 0;
    }
*/
  
    tr:last-child > td[colspan] {
        border: none;
    }


</style>
<body>
    <div class="wrapper">
        <!-- Main content -->
    
   
        <div class="container">
            <table class="table table-sm table-striped">
              
                <tbody>
                    <tr >
                        <td  colspan="8"class="bg-warning text-center text-bold">Summary</td>
                    </tr>
                    <tr class="bg-secondary">
                        <th>Tag No.</th>
                        <th>Breed</th>
                        <th>Buying Price</th>
                        <th>Treatment Cost</th>
                        <th>Vaccine Cost</th>
                        <th>Feeding Cost</th>
                        <th>Total Cost</th>
                        <th>Milk Produced</th>
                    </tr>
                    <tr >
                        <th colspan="2"></th>
                       @* <th></th>*@
                        <th>(A)</th>
                        <th>(B)</th>
                        <th>(C)</th>
                        <th>(D)</th>
                        <th>(E = A+B+C+D)</th>
                        <th>F</th>
                    </tr>

                    <tr>
                        <td>@Model.TagId</td>
                        <td>@Model.BreedName</td>
                        <td>@Model.Price.ToString()</td>
                        <td>@Model.cowSummaryVM.TotalTreatmentCost</td>
                        <td>@Model.cowSummaryVM.TotalVaccineCost</td>
                        <td>@Model.cowSummaryVM.TotalFeedingCost.ToString("0.00")</td>
                        <td >@(Model.cowSummaryVM.TotalExpense.HasValue ? Model.cowSummaryVM.TotalExpense.Value.ToString("0.00") : 0) </td>
                        <td class="text-success">@Model.cowSummaryVM.TotalMilkProduced <span>litre</span></td>
                    </tr>
                </tbody>
            </table>
            <div class="row">
                <div class="col-sm-6">
                    <table class="table table-sm  table-striped">
                       
                        <tbody>
                            <tr>
                                <td colspan="1" class="bg-olive text-center text-bold">Milk</td>
                            </tr>
                            <tr class="bg-secondary">
                                <th>Total Produced Milk</th>
                            </tr>

                            <tr>
                                <td>@Model.cowSummaryVM.TotalMilkProduced <span>Litres</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-sm-6">

                    <table class="table table-sm  table-striped">
                        <tbody>
                            <tr>
                                <td colspan="2" class="bg-olive text-center text-bold">Feeding</td>
                            </tr>
                            <tr class="bg-secondary">

                                <th>Total Quantity</th>
                                <th>Cost</th>
                            </tr>
                            <tr>
                                <td>@Model.cowSummaryVM.TotalFeedingQuantity</td>
                                <td>@Model.cowSummaryVM.TotalFeedingCost.ToString("0.00") </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
               
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <table class="table table-sm  table-striped">
                        <tbody>
                            <tr>
                                <td colspan="3" class="bg-olive text-center text-bold">Vaccine</td>
                            </tr>
                            <tr class="bg-secondary">

                                <th>Date</th>
                                <th>Description</th>
                                <th>Cost</th>
                            </tr>
                            @foreach (var vaccine in Model.vaccineVMList)
                            {
                                <tr>
                                    <td>@vaccine.VaccineDate</td>
                                    <td>@vaccine.Name</td>
                                    <td>@vaccine.Price</td>
                                </tr>
                            }
                            <tr>

                                <td colspan="2">Total Vaccine Cost: </td>
                                <td>@Model.cowSummaryVM.TotalTreatmentCost</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-sm-6">
                    <table class="table table-sm  table-striped">
                        <tbody>
                            <tr>
                                <td colspan="3" class="bg-olive text-center text-bold">Treatement</td>
                            </tr>
                            <tr class="bg-secondary">

                                <th>Date</th>
                                <th>Description</th>
                                <th>Cost</th>
                            </tr>
                            @foreach (var treatement in Model.treatmentVMList)
                            {
                                <tr>
                                    <td>@treatement.TreatmentDate</td>
                                    <td>@treatement.TreatmentDetails</td>
                                    <td>@treatement.Price</td>
                                </tr>
                            }
                            <tr>

                                <td colspan="2">Total Treatement Cost: </td>
                                <td>@Model.cowSummaryVM.TotalTreatmentCost</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
 </div>

        <script>
            window.addEventListener("load", window.print());
        </script>

</body>
</html>

