@using static Firm.Utility.Miscellaneous.Enum
@model List<CowServiceViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    int TotalCow = 0;
    int TaotalOX = 0;
    int TaotalHeifer = 0;
    int TaotalCalf = 0;

    TaotalOX = Model.Where(c=>c.LivestockTypeVal == (LivestockType?)1).Count();
