@using static Firm.Utility.Miscellaneous.Enum;
@model MilkServiceViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    int i = 0;
    var shiftValue = Model == null ? 0 : Model.ShiftVal;
    //var Date = Model == null ?  : Model.Date;
}

@section style{
    <style>
        table tr td {
            text-align: center;
        }

        table th {
            text-align: center;
        }
    </style>
}


<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center shadow pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active">Milk</li>
            </ol>
            <div>
                <a asp-action="Index"><i class="fa fa-arrow-left mr-2"></i>Back To List</a>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="">
            <div class="card-header">
                <h5 class="card-title">Milk</h5>
            </div>


            <div class="card-body">
                <form asp-action="Create" asp-controller="Milk" method="get">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                    {
                        <div class="alert alert-warning">
                            @ViewData["ErrorMessage"]
                        </div>
                    }
                    <div class="row mx-2">
                        <div class="col-md-4 col-sm-6 col-lg-4">
                            <div class="form-group">
                                <label asp-for="Date" class="control-label"> Date </label>

                                @if (Model == null)
                                {
                                    <input asp-for="Date" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" placeholder="Enter Milking Date">
                                }

                                @if (Model != null)
                                {
                                    <input asp-for="Date" type="date" value="@Model.Date.ToString("yyyy-MM-dd")" class="form-control" placeholder="Enter Milking Date">

                                }
                            </div>
                        </div>

                       
                        <div class="col-md-4 col-sm-6 col-lg-4">
                            <div class="form-group">
                                <label class="control-label"> Shift </label>
                                <select asp-for="ShiftVal" id="shiftValue" required class="form-control" asp-items="@Html.GetEnumSelectList<Shift>()">
                                    <option> Select Shift</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4 col-sm-6 col-lg-4">
                            <div class="form-group">
                                <label asp-for="ShadeNo" class="control-label"> Shade Number </label>
                                <input asp-for="ShadeNo" required class="form-control" placeholder="Shade Number">
                            </div>
                        </div>

                    </div>
                   
                    <div class="row mx-2 float-right">
                        <div class="form-group col-sm-12">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </div>

                </form>

            </div>

        </div>
    </div>
</section>

<form asp-action="CreateMilk" asp-controller="Milk" method="post">
    <input type="hidden" class="text-center" asp-for="ShiftVal" value="@Model.ShiftVal" />
    <input type="hidden" class="text-center" asp-for="Date" value="@Model.Date" />
    <div class="w-75 mx-auto">
        <table id="milkCollectionTable" class="display table table-bordered">
            <thead>
                <tr>
                    <th>Sl</th>
                    <th>Cow tag No.</th>


                    <th>Milk Collection</th>
                </tr>
            </thead>
            <tbody>



                @if (Model != null)
                {
                 

                  

                    foreach (var list in Model.milkServiceVmList)
                    {
                        <tr>
                          

                            <td>@(i + 1)</td>
                            <td>
                                
                                <input type="hidden" class="text-center" asp-for="milkServiceVmList[i].CowId" value="@list.CowId" />@list.CowTagId
                            </td>

                            <td><input class="text-center"  value="" asp-for="milkServiceVmList[i].TotalMilk" /> Litre</td>

                        </tr>

                        i++;
                    }
                }

            </tbody>
            <tfoot class="table-borderless">
                <tr>
                    <td colspan="3">
                        <div class="row mx-2 float-right">
                            <div class="form-group col-sm-12">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </td>
                </tr>


            </tfoot>
        </table>
    </div>
</form>







@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

    <script>
        $(document).ready(function () {
            $('#MilkMonitor').addClass('menu-open');
            $('#Milk').addClass('active');
            $('#milkCollectionTable').DataTable({
                "paging": false

            });
            $('#milkCollectionTable_info').hide();
        });
    </script>
    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(500,).slideUp(500, function () {
                $(this).remove();
            });
        }, 4000);
    </script>
  }


