@using static Firm.Utility.Miscellaneous.Enum;
@model MilkServiceViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    int i = 0;
    
}

@section style{
    <style>
        table  tr td{
            text-align:center;
        }

        table th{
            text-align: center;
        }
    </style>
}


<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center shadow pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active">Milk</li>
            </ol>
            <div>
                <a asp-action="Index"><i class="fa fa-arrow-left mr-2"></i>Back To List</a>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="">
            <div class="card-header">
                <h5 class="card-title">Milk</h5>
            </div>

            <div class="card-body">
                <form asp-action="Create" asp-controller="Milk" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                    {
                        <div class="alert alert-warning">
                            @ViewData["ErrorMessage"]
                        </div>
                    }
                    <div class="row mx-2">
                        <div class="col-md-4 col-sm-6 col-lg-4">
                            <div class="form-group">
                                <label asp-for="Date" class="control-label"> Date </label>
                                <input asp-for="Date" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" placeholder="Enter Milking Date">
                            </div>
                        </div>

                        @*<div class="col-md-6 col-sm-12 col-lg-6">
                        <div class="form-group">
                        <label asp-for="CowId" class="control-label">Cow Tag No.</label>
                        <select required asp-for="CowId" class="form-control" asp-items="ViewBag.cowList">
                        <option value="">-- Select Cow Tag No.--</option>
                        </select>
                        </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-lg-6">
                        <div class="form-group">
                        <label asp-for="ShiftVal" class="control-label">Shift</label>
                        <select asp-for="ShiftVal" asp-items="Html.GetEnumSelectList<Shift>()" class="form-control"></select>
                        </div>
                        </div>*@
                        <div class="col-md-4 col-sm-6 col-lg-4">
                            <div class="form-group">
                                <label asp-for="ShiftVal" class="control-label"> Shift </label>
                              <select id="shiftValue" required class="form-control" asp-items="@Html.GetEnumSelectList<Shift>()"
                                        value="">
                                   <option> Select Shift</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4 col-sm-6 col-lg-4">
                            <div class="form-group">
                                <label asp-for="ShadeNo" class="control-label"> Shade Number </label>
                                <input asp-for="ShadeNo" required class="form-control" placeholder="Shade Number">
                            </div>
                        </div>

                    </div>
                    @*  <div class="col-md-12 col-sm-12 col-lg-12">
                    <div class="form-group">
                    <label asp-for="Remarks" class="control-label"> Remarks </label>
                    <textarea asp-for="Remarks" class="form-control" placeholder="Enter Remarks" maxlength="100"></textarea>

                    </div>
                    </div>*@
                    <div class="row mx-2 float-right">
                        <div class="form-group col-sm-12">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</section>
<div class="w-75 mx-auto">
    <form asp-action="Create" asp-controller="Milk" method="post">
        <table id="milkCollectionTable" class="display table table-bordered">
            <thead>
                <tr> 
                    <th>Sl</th>
                    <th>Cow tag No.</th>
                    

                    <th>Milk Collection</th>
                </tr>
            </thead>
            <tbody>


                @if (Model != null)
                {
                    foreach (var list in Model.milkServiceVmList)
                    {

                        <tr> 
                            <td>@(i+1)</td>
                            <td>@list.CowTagId</td>
                           
                            <td><input asp-for="milkServiceVmList[i].TotalMilk" /></td>
                          
                        </tr>

                        i++;
                    }

                }
            </tbody>
            <tfoot class="table-borderless">
                <tr>
                    <td colspan="3">
                    <div class="row mx-2 float-right">
                        <div class="form-group col-sm-12">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                    </td>
                </tr>


            </tfoot>
        </table>

    </form>
</div>






@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#MilkMonitor').addClass('menu-open');
            $('#Milk').addClass('active');
            $('#milkCollectionTable').DataTable({
                select: {
                    style: 'os',
                    items: 'cell'
                }
                        $('#shiftValue').val((@Model.ShiftVal??0));
            });
        });
    </script>
    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(500,).slideUp(500, function () {
                $(this).remove();
            });
        }, 4000);
    </script>
  }


