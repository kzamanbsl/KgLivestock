@if (Model != null)
{
    <form asp-action="Create" asp-controller="FeedConsumptionBulk" method="post">
        <input type="hidden"  asp-for="FeedCategoryId" value="@Model.FeedCategoryId" />
        <input type="hidden"  asp-for="Date" value="@Model.Date" />
        <div class="w-75 mx-auto">
            <table id="FeedConsumptionTable" class="display table table-bordered">
                <thead>
                    <tr>
                        <th>Sl</th>
                        <th>Shade Number</th>


                        <th>Line Number</th>
                        <th>Quentity</th>
                    </tr>
                </thead>
                <tbody>







                    @foreach (var list in Model.feedConsumptionList)
                    {
                        <tr>
                           

                            <td>@(i + 1)</td>
                            <td>

                                <input type="hidden" class="text-center" asp-for="feedConsumptionList[i].ShadeNo" value="@(list.ShadeNo??null)" />@(list.ShadeNo.ToString()??null)
                            </td>
                            <td>

                                <input type="hidden" class="text-center" asp-for="feedConsumptionList[i].LineNo" value="@(list.LineNo??null)" />  @(list.LineNo)
                            </td>

                            <td><input value="" class="text-center" asp-for="feedConsumptionList[i].Quantity" /> Kg</td>

                        </tr>

                        i++;
                    }


                </tbody>
                <tfoot class="table-borderless">
                    <tr>
                        <td colspan="4">
                            <div class="row mx-2 float-right">
                                <div class="form-group col-sm-12">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </td>
                    </tr>


                </tfoot>
            </table>
        </div>
    </form>


}

